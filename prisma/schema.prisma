datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
    ADMIN
    TEACHER
    STUDENT
}

model User {
    id        Int       @id @default(autoincrement())
    
    email     String    @unique
    name      String?
    password  String?
    // 個人資料
    birthday  DateTime?
    phone     String?
    image     String?
    lineId    String?

    // 社群帳號
    facebook  String?
    instagram String?

    // 推播通知
    

    //
    
    role      Role      @default(TEACHER)  // TODO: change to STUDENT(production)
    provider  String    @default("credentials")
    
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
}
